[Unit]
Description=Gunicorn daemon to serve my flaskapp
After=network.target

[Service]
User=cyberdashboard
Group=cyberdashboard
WorkingDirectory=/usr/bin/dashboard/cyber-dashboard-flask/server
#ExecStart=gunicorn app:server
Environment="PATH=/usr/bin/dashboard/.venv"
ExecStart=/usr/bin/dashboard/.venv/bin/gunicorn -w 4 -b 0.0.0.0:8080 app:app

[Install]
WantedBy=multi-user.target